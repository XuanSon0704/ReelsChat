# DO NOT COMMIT REAL SECRETS. Apply with real values in CI/CD or manually.
apiVersion: v1
kind: Secret
metadata:
  name: chat-db-secret
  namespace: reels-chat
type: Opaque
stringData:
  POSTGRES_PASSWORD: "<replace-with-strong-password>"
  # Move DATABASE_URL to Secret instead of ConfigMap
  DATABASE_URL: "postgresql://chatuser:<replace-password>@postgres-svc:5432/chatdb"
